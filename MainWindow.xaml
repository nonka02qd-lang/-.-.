<Window x:Class="CatchSquare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поймай квадрат" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="StartBtn" Content="Старт" Click="StartBtn_Click"/>
            <TextBlock Text="Очки: " Margin="10,0,0,0"/>
            <TextBlock x:Name="ScoreText" Text="0"/>
            <TextBlock Text=" Время: " Margin="10,0,0,0"/>
            <TextBlock x:Name="TimeText" Text="30"/>
            <TextBlock Text=" Рекорд: " Margin="10,0,0,0"/>
            <TextBlock x:Name="RecordText" Text="0"/>
        </StackPanel>

        <Canvas x:Name="GameCanvas" Grid.Row="1" Background="LightGray" MouseDown="GameCanvas_MouseDown"/>
    </Grid>
</Window>
